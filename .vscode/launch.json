  "version": "0.2.0",
  "configurations": [
		{
			"name": "SmartAnt Debug",
			"device": "STM32F745VG",
			"svdFile": "${workspaceRoot}/ports/stm32/boards/SMART_ANTENNA/STM32F745.svd",
			"request": "launch",
			"type": "cortex-debug",
			"servertype": "jlink",
			"interface": "swd",
			"cwd": "${workspaceRoot}/ports/stm32",
			"executable": "./build-SMART_ANTENNA/firmware.elf",
      "runToEntryPoint": "stm32_main",
			"internalConsoleOptions": "openOnSessionStart",
			"preLaunchCommands": [
				"set mem inaccessible-by-default off",
				"set print pretty"
			]
		}
  ]
}